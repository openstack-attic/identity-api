<schema
    elementFormDefault="qualified"
    attributeFormDefault="unqualified"
    xmlns="http://www.w3.org/2001/XMLSchema"
    xmlns:identity="http://docs.openstack.org/identity/api/v3"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning"
    xmlns:xsdxt="http://docs.rackspacecloud.com/xsd-ext/v1.0"
    xmlns:atom="http://www.w3.org/2005/Atom"
    targetNamespace="http://docs.openstack.org/identity/api/v3"
>

    <!-- Import ATOM specific schema definitions -->
    <import vc:minVersion="1.1" namespace="http://www.w3.org/2005/Atom"
            schemaLocation="atom/atom.xsd" />
   <include schemaLocation="entity.xsd"/>


    <!-- Complex Types -->
    <complexType name="CredentialType">
        <sequence>
            <element  ref="identity:links" />
            <any namespace="##other" processContents="lax" minOccurs="0" maxOccurs="unbounded" />
        </sequence>
        <attribute name="id" type="xsd:string" use="optional"/>
        <attribute name="user_id" type="xsd:string" use="required"/>
        <attribute name="project_id" type="xsd:string" use="optional"/>
        <attribute name="blob" type="xsd:string" use="required"/>
        <anyAttribute namespace="##other" processContents="lax"/>
    </complexType>

    <complexType name="CredentialsType">
        <sequence>
            <element name="credential" type="identity:CredentialType" minOccurs="0" maxOccurs="unbounded"/>
            <element  ref="identity:links" />
        </sequence>
        <anyAttribute namespace="##other" processContents="lax"/>
    </complexType>

    <!-- Elements -->
    <element name="credential" type="identity:CredentialType"  >
        <annotation>
            <xsd:documentation
                    xml:lang="EN"
                    xmlns="http://www.w3.org/1999/xhtml">
                <p>
                    An authentication credential.
                </p>
            </xsd:documentation>
        </annotation>
    </element>

    <element name="credentials" type="identity:CredentialsType"  >
        <annotation>
            <xsd:documentation
                    xml:lang="EN"
                    xmlns="http://www.w3.org/1999/xhtml">
                <p>
                    A list of authentication credentials.
                </p>
            </xsd:documentation>
        </annotation>
    </element>

</schema>
